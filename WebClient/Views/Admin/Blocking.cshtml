@model WebClient.Models.User
@{
    ViewData["Title"] = "Блокировка";
}
    <div class="text-center text-info">
        <h1>Блокировка</h1>
    </div>
@using (Html.BeginForm())
{
    <table class="table">
        <tr>
            <td>Логин</td>
            <td>Специлизация</td>
            <td>Почта</td>
            <td>Блокировка</td>
            <td>Заблокировать/разблокировать</td>
        </tr>
        @foreach (var client in ViewBag.Clients)
        {
    <tr>
        <td>@client.Login</td>
        <td>@client.Specialication</td>
        <td>@client.Email</td>
        <td>
            @client.Block
        </td>
        <td>
            <a href="/Admin/Block/@client.Id">Заблокировать/разблокировать</a>
        </td>
    </tr>

        }
    </table>
}
